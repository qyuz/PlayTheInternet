{
    "name":"PlayTheInternet",
    "version":"0.5",
    "description":"Plays the internet!",
    "icons":{
        "128":"favicon.ico"
    },
    "background":{
        "page":"pley.html"
    },
    "content_scripts":[
        {
            "matches":["http://*/*", "https://*/*"],
            "js":["js/lib/cparse.js"]
        }
    ],
    "permissions":[
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "storage",
        "http://*/*", "https://*/*"
    ],
    "browser_action":{
        "default_title":"",
        "default_icon":"favicon.ico",
        "default_popup":"pley.html"
    },
    "options_page":"options.html",

    "manifest_version":2,
    "content_security_policy":"default-src 'unsafe-eval' http:// https://; img-src 'self' https:// http://; script-src 'unsafe-eval' https://; object-src 'unsafe-eval'; frame-src 'unsafe-eval' https:// http://; style-src 'unsafe-inline'"
}
